{
    "env": {
    "browser": true,
    "es2021": true
    },
    "extends": ["react-app", "airbnb", "prettier"],
    "parserOptions": {
    "ecmaFeatures": {
    "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
    },
    "plugins": [
    "react",
    "prettier"
    ],
    "rules": {
        "jsx-a11y/label-has-associated-control": ["error", {
            "required": {
              "some": ["nesting", "id"]
            }
          }],
          "jsx-a11y/label-has-for": ["error", {
            "required": {
              "some": ["nesting", "id"]
            }
          }],
    "prettier/prettier": [
    "error", {
    "printWidth": 80,
    "trailingComma": "es5",
    "semi": true,
    "jsxSingleQuote": true,
    "singleQuote": true,
    "useTabs": true,
    "endOfLine": "auto",
    "max-len": ["error", { "code": 80 }]
    }
    ]
    }
   }